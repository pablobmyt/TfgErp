<Window x:Class="TfgErp.Pintar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TfgErp"
        mc:Ignorable="d"
        Title="Pintar" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Lápiz" Name="PencilButton" Click="PencilButton_Click"/>
            <Button Content="Borrar" Name="EraserButton" Click="EraserButton_Click"/>
            <Button Content="Color" Name="ColorButton" Click="ColorButton_Click"/>
            <Button Content="Guardar" Name="SaveButton" Click="SaveButton_Click"/>
            <!-- Agregar más herramientas según sea necesario -->
        </ToolBar>
        <InkCanvas Name="paintSurface" Background="White"/>
    </DockPanel>
</Window>
